<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tonydicola.bletest.app.MainActivity">

    <Button
        android:id="@+id/g"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="240dp"
        android:layout_marginTop="302dp"
        android:text="G" />

    <Button
        android:id="@+id/d"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="302dp"
        android:text="D" />

    <Button
        android:id="@+id/a"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="262dp"
        android:text="A" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Send"
        android:onClick="sendClick"/>

    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/send"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <ScrollView
        android:id="@+id/ctScrollView"
        android:layout_width="389dp"
        android:layout_height="168dp"
        android:layout_above="@+id/setToOutputBtn"
        android:layout_below="@id/send"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="387dp">

        <TextView
            android:id="@+id/messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </ScrollView>

    <Button
        android:id="@+id/setToOutputBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set to Output"
        android:layout_above="@+id/switchOnBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/switchOnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch on LED"
        android:layout_alignTop="@+id/switchOffBtn"
        android:layout_toStartOf="@+id/switchOffBtn" />

    <Button
        android:id="@+id/switchOffBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch Off LED"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp" />

    <Button
        android:id="@+id/e"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="280dp"
        android:layout_marginTop="262dp"
        android:text="E" />

    <Button
        android:id="@+id/h"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="312dp"
        android:layout_marginTop="302dp"
        android:text="H" />

    <Button
        android:id="@+id/f"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="280dp"
        android:layout_marginTop="342dp"
        android:text="F" />

    <Button
        android:id="@+id/c"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="302dp"
        android:text="C" />

    <Button
        android:id="@+id/b"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="342dp"
        android:text="B" />

</RelativeLayout>
